<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="idgen.Book" table="HB_BOOKS">
		<id name="id" type="int">
			<generator class="native" />
		</id>
		<property name="title" type="java.lang.String" length="20" />
	</class>
 	 
	<class name="idgen.Chapter" table="hb_chapters">
		<composite-id class="idgen.ChapterID" name="id">
			<key-property name="bookId" />
			<key-property name="chapterNo" />
		</composite-id>
		<property name="title" type="java.lang.String" length="50" />
	</class>
 
</hibernate-mapping>
